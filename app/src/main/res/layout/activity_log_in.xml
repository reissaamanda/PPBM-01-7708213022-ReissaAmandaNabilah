<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn"
    android:background="@drawable/background_cat"
    android:orientation="vertical">

    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:text="PetLife"
        android:textSize="55sp"
        android:textColor="@color/white"
        android:fontFamily="@font/wigglye"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:textStyle="bold"
        android:text="Log In"
        android:textSize="25sp"
        android:textAlignment="center"
        android:fontFamily="@font/aileronbold"/>

    <EditText
        android:id="@+id/edt1"
        style="@style/EditTextWithOutlineStyle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:hint="Email"
        android:inputType="text"
        android:fontFamily="@font/alefregular"/>

    <EditText
        android:id="@+id/edt2"
        style="@style/EditTextWithOutlineStyle"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alefregular"
        android:hint="Password"
        android:inputType="textPassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:background="@drawable/style_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"
        android:text="log in"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/aileronheavy"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="-Log In with-"
        android:textAlignment="center"
        android:fontFamily="@font/alefregular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="178dp"
            android:src="@drawable/google"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/facebook"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="100dp"
            android:text="Don't have an account?"
            android:textAlignment="center"
            android:fontFamily="@font/alefregular"/>

        <TextView
            android:id="@+id/text_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textColor="#5FA4B2"
            android:textAlignment="center"
            android:fontFamily="@font/alefregular"/>
    </LinearLayout>

</LinearLayout>